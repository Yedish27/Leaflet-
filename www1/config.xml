<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.phonegap.example"
    versionCode = "2"
    version     = "2.0.0" >

<!-- versionCode is optional and Android only -->

  <name>Geolocation Maps</name>

  <description>
      A very simple calculator app which serves an example for hybrid app
  </description>

  <author href="https://build.phonegap.com" email="yedishsoorea@gmail.com">
      Yedish Soorea
  </author>
    <content src="index.html" />

    
    <plugin name="cordova-plugin-geolocation"         source="npm" spec="~2.4.3" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
  <access origin="*" />
  <allow-intent href="http:///" />
  <allow-intent href="https:///" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
      <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
      <allow-intent href="itms:*" />
      <allow-intent href="itms-apps:*" />
  </platform>

</widget>